{
  "manifest_version": 2,
  "name": "Trello List Navigator",
  "version": "1.0.0",
  "description": "Navigate Trello boards with a searchable dropdown of all available lists",
  
  "permissions": [
    "activeTab",
    "*://trello.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://trello.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  
  "web_accessible_resources": [
    "styles.css"
  ]
}
